    <build>
        <plugins>
            <!--            kotlin 支持  -->
            <!-- 配置 Kotlin 编译器插件 -->
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>

                <!-- 执行 compile 和 test-compile 阶段 -->
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <args>
                                <arg>-opt-in=kotlin.contracts.ExperimentalContracts</arg> <!-- 启用实验性的契约特性 -->
                                <arg>-Xuse-ir</arg> <!-- 使用 Ir 的优化编译器 -->
                            </args>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                        <configuration>
                            <args>
                                <arg>-opt-in=kotlin.contracts.ExperimentalContracts</arg> <!-- 启用实验性的契约特性 -->
                                <arg>-Xuse-ir</arg> <!-- 使用 Ir 的优化编译器 -->
                            </args>
                        </configuration>
                    </execution>
                </executions>
                <!-- 设置 JVM 目标版本为 Java 8 -->
                <configuration>
                    <jvmTarget>${java.version}</jvmTarget>
                </configuration>
            </plugin>
        </plugins>
    </build>


